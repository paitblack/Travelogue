<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_goal_travel_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location_pin" 
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_goal_travel_location"
            app:layout_constraintBottom_toBottomOf="@+id/item_goal_travel_location"/>

        <TextView
            android:id="@+id/item_goal_travel_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/abhaya_libre_semibold"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/item_goal_travel_delete_btn"
            app:layout_constraintStart_toEndOf="@+id/item_goal_travel_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Country, City" />

        <TextView
            android:id="@+id/item_goal_travel_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/abhaya_libre_semibold"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/item_goal_travel_location"
            app:layout_constraintStart_toStartOf="@+id/item_goal_travel_location"
            app:layout_constraintTop_toBottomOf="@+id/item_goal_travel_location"
            tools:text="00.00.0000" />

        <ImageButton
            android:id="@+id/item_goal_travel_delete_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/delete_icon"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete Goal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
