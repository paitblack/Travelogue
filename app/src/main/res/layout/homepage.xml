<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFCFC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container_hp"
        android:layout_width="412dp"
        android:layout_height="250dp"
        android:background="#2B5658"
        android:padding="24dp"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:paddingTop="48dp"
        android:paddingEnd="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_hp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="0dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/hi_name_hp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:srcCompat="@drawable/no_pp"
            app:strokeColor="#FBFCFC"
            app:strokeWidth="4dp" />

        <ImageButton
            android:id="@+id/menu_btn_hp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="146dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="Menu"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/homepage_menu" />

        <TextView
            android:id="@+id/hi_name_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/abhaya_libre_semibold"
            android:text="Hi, Layla !"
            android:textColor="#FBFCFC"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/cherish_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/abhaya_libre_semibold"
            android:text="Cherish your beautiful memories"
            android:textColor="#B3FBFCFC"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>